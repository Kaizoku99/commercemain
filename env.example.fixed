# Created by Vercel CLI
VERCEL_OIDC_TOKEN="placeholder"
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_CHECKOUT_DOMAIN=checkout.yourstore.com
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token
SHOPIFY_ADMIN_ACCESS_TOKEN=your_admin_access_token
SHOPIFY_REVALIDATION_SECRET=your_revalidation_secret
SHOPIFY_CUSTOMER_ACCOUNT_ACCESS_TOKEN=your_customer_account_access_token
SHOPIFY_API_VERSION=2024-01
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Flowise Configuration
NEXT_PUBLIC_FLOWISE_API_HOST=http://localhost:3000
FLOWISE_API_KEY=your-flowise-api-key-here
NEXT_PUBLIC_FLOWISE_CHATFLOW_ID=your-chatflow-id-here
INSTAGRAM_ACCESS_TOKEN="your_instagram_access_token"
# Analytics Configuration
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your-facebook-pixel-id
NEXT_PUBLIC_SHOPIFY_ANALYTICS_ENABLED=true

# Feature Flags
ENABLE_CUSTOMER_ACCOUNTS=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_PREDICTIVE_SEARCH=true
ENABLE_ADVANCED_FILTERS=true

# Cache Configuration
CACHE_PRODUCTS=true
CACHE_COLLECTIONS=true
CACHE_CART=true

# Customer Account API OAuth Configuration (New Customer Accounts)
# Get these from Shopify Admin > Sales Channels > Headless > Customer Account API settings
SHOPIFY_CUSTOMER_ACCOUNT_CLIENT_ID=your_client_id
SHOPIFY_CUSTOMER_ACCOUNT_CLIENT_SECRET=your_client_secret
# Your shop ID (numeric) - find in Shopify Admin URL or via API
SHOPIFY_SHOP_ID=your_shop_id

# Custom OAuth Endpoints (for stores with custom account domains like account.atpgroupservices.ae)
SHOPIFY_CUSTOMER_ACCOUNT_AUTH_URL=https://account.yourdomain.com/authentication/oauth/authorize
SHOPIFY_CUSTOMER_ACCOUNT_TOKEN_URL=https://account.yourdomain.com/authentication/oauth/token
SHOPIFY_CUSTOMER_ACCOUNT_LOGOUT_URL=https://account.yourdomain.com/authentication/logout

# Session encryption secret (generate a random 32+ character string)
SESSION_SECRET=your_session_secret