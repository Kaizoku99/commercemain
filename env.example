# Shopify Configuration
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token
SHOPIFY_API_VERSION=2026-01
SHOPIFY_CUSTOMER_ACCOUNT_ACCESS_TOKEN=your_customer_account_access_token
SHOPIFY_REVALIDATION_SECRET=your_revalidation_secret

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id
SHOPIFY_ANALYTICS_ENABLED=true

# Feature Flags
ENABLE_CUSTOMER_ACCOUNTS=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_PREDICTIVE_SEARCH=true
ENABLE_ADVANCED_FILTERS=true

# Cache Configuration
CACHE_PRODUCTS=true
CACHE_COLLECTIONS=true
CACHE_CART=true

# Development
NODE_ENV=development

# ATP Membership Configuration
# Get these values from your Shopify store after creating the membership product
NEXT_PUBLIC_MEMBERSHIP_VARIANT_ID=
NEXT_PUBLIC_MEMBERSHIP_PRODUCT_HANDLE=atp-membership-annual
NEXT_PUBLIC_USE_DIRECT_MEMBERSHIP_CHECKOUT=false

# Tabby Payment Configuration
# Get these keys from https://merchant.tabby.ai/business-profile/stores
NEXT_PUBLIC_TABBY_PUBLIC_KEY=your_tabby_public_key_here

# Tamara Payment Configuration
# Get these keys from https://partners.tamara.co/#/api/list
NEXT_PUBLIC_TAMARA_PUBLIC_KEY=your_tamara_public_key_here
